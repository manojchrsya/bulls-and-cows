<div class="chat flex-column justify-content-center text-center" id="initial-chat">
  <div class="container-xxl">
      <div class="avatar avatar-lg mb-5">
        <% if (user.profilePic) { %>
          <img class="avatar-img profile-pic" src="<%= user.profilePic.url %>" alt="<%= user.name %>">
        <% } else { %>
          <i class="icon-md fe-user"></i>
        <% } %>
      </div>
      <h6>Hey, <%= user.name %>!</h6>
      <p>Please select a chat to start messaging.</p>
  </div>
</div>
